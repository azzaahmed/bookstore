<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= book.name %></small></h4>
    </div>
    <div class="col-xs-4">
      
      <%= form_for @order_item, remote: true do |f| %>
      <h4 class="text-right"> Price: <span style="color: green"><%= number_to_currency book.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :book_id, value: book.id %>
             <%= f.hidden_field :price, value: book.price   %>
             <%= f.hidden_field :user_id, value:current_user.id %>

  <div class="actions">
       <%= link_to 'Add to Cart', {:controller => 'order_items', :action => 'new', :book_id => book.id } , class: "btn btn-primary"  %>
        <!--     <%= f.submit "Add to Cart", class: "btn btn-primary" %> -->
             </div>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>