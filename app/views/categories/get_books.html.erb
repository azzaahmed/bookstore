<%if notice %>
<p id="notice" style="margin-top:10px;margin-left:20px;width:250px" class="alert alert-success" role="alert"><%= notice %></p>
<%end%>

<h1>Listing bookss</h1>

<table>
  <thead>
    <tr>
      <th>books name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookk.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

